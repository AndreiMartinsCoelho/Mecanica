<div class="cards">
    <div class="card-info">
        <h1>Peças</h1>
        <%= link_to "Adicionar peças+", pecas_path%>
    </div>
    <h1 class="Title">Peças na oficina</h1>
    <div class="list">
        <% @pecas.each do |peca| %>
            <div class="list-item">
                <div class="item2">
                    <p><%= peca.Tipo_peca %></p>
                </div>

                <div class="item2">
                    <strong>Estoque: </strong>
                    <p><%= peca.Quantidade %></p>
                </div>

                <div class="item2">
                    <%= link_to "Saiba mais", peca_path(peca) %>
                </div>                
            </div>
        <% end %>
    </div>
</div>

