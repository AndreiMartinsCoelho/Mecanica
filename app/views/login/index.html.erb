<!-- app/views/login/index.html.erb -->

<h1>Login#index</h1>

<% if flash[:alert] %>
  <p class="alert"><%= flash[:alert] %></p>
<% end %>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_tag login_login_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], required: true %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>
<% end %>

